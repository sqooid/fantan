    "sveltekit-superforms": "^2.17.0",
    "tailwindcss": "3.4.10",
    "typescript": "latest",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.3",
    "vite-plugin-tailwind-purgecss": "0.3.3",
    "vitest": "^2.0.0",
    "zod": "^3.23.8"
